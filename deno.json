{
  "imports": {
    "@/": "./src/"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/routeTree.gen.ts", "dist/", "node_modules/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["src/routeTree.gen.ts", "dist/", "node_modules/"],
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}